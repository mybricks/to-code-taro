{
  "title": "图片上传",
  "namespace": "mybricks.taro.formImageUploader",
  "author": "mybricks-team",
  "author_name": "板砖团队",
  "version": "1.0.3",
  "runtime": "./runtime.tsx",
  "data": "./data.json",
  "editors": "./editors.tsx",
  "icon": "./icon.svg",
  "preview": "https://assets.mybricks.world/nMzIVC8kVvHhZc2vbNwyB8mHGqSgfI1n-1743579771754.png",
  "ai": "./ai.ts",
  "inputs": [
    {
      "id": "setValue",
      "title": "设置值",
      "desc": "设置值，并触发值变化事件输出",
      "schema": {
        "type": "array"
      },
      "rels": ["setValueComplete"]
    },
    {
      "id": "getValue",
      "title": "获取值",
      "desc": "获取值并输出",
      "schema": {
        "type": "array"
      },
      "rels": ["returnValue"]
    },
    {
      "id": "resetValue",
      "title": "重置值",
      "desc": "清空值",
      "schema": {
        "type": "any"
      },
      "rels": ["resetValueComplete"]
    },
    {
      "id": "setLabel",
      "title": "设置标题",
      "desc": "设置表单项标题，仅当表单项在表单容器内时生效",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setPlaceholder",
      "title": "设置提示内容",
      "desc": "设置图片上传下方的文本提示内容",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setDisabled",
      "title": "设置是否禁用",
      "desc": "设置表单项是否禁用，传入 true 时禁用表单项，传入 false 时启用表单项",
      "schema": {
        "type": "boolean"
      }
    },
    {
      "id": "setMaxCount",
      "title": "设置最大上传数量",
      "desc": "设置最大上传数量，传入 0 时表示不限制",
      "schema": {
        "type": "number"
      },
      "rels": ["setMaxCountComplete"]
    }
  ],
  "outputs": [
    {
      "id": "onChange",
      "title": "当值变化",
      "schema": {
        "type": "array"
      }
    },
    {
      "id": "setValueComplete",
      "title": "设置值完成",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "returnValue",
      "title": "值输出",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "resetValueComplete",
      "title": "重置值完成",
      "schema": {
        "type": "string"
      }
    },
    {
      "id": "setDisabledComplete",
      "title": "是否禁用设置完成",
      "schema": {
        "type": "boolean"
      }
    },
    {
      "id": "setMaxCountComplete",
      "title": "设置最大上传数量完成",
      "schema": {
        "type": "number"
      }
    }
  ],
  "slots": [
    {
      "id": "customUpload",
      "title": "逐张图片上传处理",
      "type": "scope",
      "inputs": [
        {
          "id": "fileData",
          "title": "输出图片本地文件路径",
          "schema": {
            "type": "object",
            "properties": {
              "filePath": {
                "type": "string",
                "description": "本地临时文件路径"
              },
              "size": {
                "type": "number",
                "description": "本地文件大小，单位 B"
              },
              "fileName": {
                "type": "string",
                "description": "原始文件名称，仅在 H5 环境下有效"
              },
              "type": {
                "type": "string",
                "description": "原始文件类型，仅在 H5 环境下有效"
              },
              "formData": {
                "type": "any",
                "description": "表单项数据，仅在 H5 环境下有效"
              }
            }
          }
        }
      ],
      "outputs": [
        {
          "id": "setFileInfo",
          "title": "设置图片上传后地址",
          "schema": {
            "type": "string"
          }
        }
      ]
    },
    {
      "id": "iconSlot",
      "title": "占位插槽"
    }
  ],
  "schema": ["mybricks.taro.formContainer/formItem", "*"]
}
